{
  "name": "video-to-markdown",
  "version": "3.1.0",
  "private": true,
  "description": "How to embed a video in markdown? Here the answer. Add videos to your markdown files easier.",
  "homepage": "https://video-to-markdown.netlify.com/",
  "type": "module",
  "author": {
    "name": "Marco Montalbano",
    "email": "me@marcomontalbano.com",
    "url": "https://marcomontalbano.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcomontalbano/video-to-markdown"
  },
  "keywords": [
    "md",
    "markdown",
    "video",
    "youtube",
    "facebook",
    "vimeo",
    "dailymotion",
    "asciinema",
    "google-drive",
    "onedrive",
    "peertube",
    "imgur",
    "loom",
    "wistia",
    "streamable",
    "netlify"
  ],
  "engines": {
    "node": ">= 22.14.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tsm": "^2.3.0",
    "uvu": "^0.5.6",
    "sinon": "^21.0.0"
  },
  "dependencies": {
    "@types/crypto-js": "^4.2.2",
    "cloudinary": "^2.8.0",
    "crypto-js": "^4.2.0"
  },
  "scripts": {
    "clean": "rm -rf pnpm-lock.yaml node_modules/ */*/node_modules */*/dist",
    "preinstall": "npx only-allow pnpm",
    "build:extension": "pnpm -C extension build",
    "prepare": "husky",
    "test": "uvu -r tsm netlify .test.*s",
    "format": "pnpm biome format packages/website/src packages/service/src netlify extension --write",
    "lint": "pnpm biome check packages/website/src packages/service/src netlify extension",
    "dep:major": "pnpm dlx npm-check-updates --packageFile '**/package.json' -u",
    "dep:minor": "pnpm dep:major -t minor",
    "ls-engines": "pnpm dlx ls-engines",
    "version": "pnpm build:extension && git add -A extension"
  }
}
