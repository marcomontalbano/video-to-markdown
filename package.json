{
  "name": "video-to-markdown",
  "version": "2.1.0",
  "private": true,
  "description": "How to embed a video in markdown? Here the answer. Add videos to your markdown files easier.",
  "homepage": "https://video-to-markdown.netlify.com/",
  "type": "module",
  "author": {
    "name": "Marco Montalbano",
    "email": "me@marcomontalbano.com",
    "url": "https://marcomontalbano.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcomontalbano/video-to-markdown"
  },
  "keywords": [
    "md",
    "markdown",
    "video",
    "youtube",
    "facebook",
    "vimeo",
    "dailymotion",
    "asciinema",
    "google-drive",
    "onedrive",
    "peertube",
    "imgur",
    "loom",
    "wistia",
    "streamable",
    "netlify"
  ],
  "engines": {
    "node": ">= 22.14.0"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.14.1",
    "@parcel/transformer-sass": "^2.14.1",
    "@parcel/transformer-webmanifest": "^2.14.1",
    "dotenv": "^16.4.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "netlify-cli": "^19.1.5",
    "parcel": "^2.14.1",
    "posthtml-expressions": "^1.11.4",
    "posthtml-include": "^2.0.1",
    "@biomejs/biome": "^1.9.4",
    "sass": "^1.86.0",
    "sharp": "^0.33.5",
    "sinon": "^19.0.4",
    "svgo": "^3.3.2",
    "tsm": "^2.3.0",
    "uvu": "^0.5.6"
  },
  "dependencies": {
    "@netlify/functions": "^3.0.2",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.13.10",
    "clipboard": "^2.0.11",
    "cloudinary": "^2.6.0",
    "crypto-js": "^4.2.0",
    "hint.css": "^3.0.0",
    "node-html-parser": "^7.0.1",
    "nprogress": "^0.2.0",
    "prismjs": "^1.30.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build:extension": "pnpm -C extension build",
    "build-db": "tsm ./scripts/build-db.ts",
    "start:client": "parcel serve --no-autoinstall src/index.html src/terms.html --dist-dir dist/client",
    "build:client": "parcel build --no-autoinstall src/index.html src/terms.html --dist-dir dist/client",
    "dev": "netlify dev",
    "build": "netlify build -o",
    "local:build": "env $(awk 'NF > 0 && !/^#/ { print $0 }' .env | xargs) pnpm build",
    "predev": "pnpm build-db",
    "prebuild:client": "pnpm build-db",
    "prepare": "husky",
    "test": "uvu -r tsm netlify .test.*s",
    "format": "pnpm biome format src scripts netlify extension --write",
    "lint": "pnpm biome check src scripts netlify extension",
    "dep:major": "pnpm dlx npm-check-updates --packageFile '**/package.json' -u",
    "dep:minor": "pnpm dep:major -t minor",
    "ls-engines": "pnpm dlx ls-engines"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead"
}
